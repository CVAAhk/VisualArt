import QtQuick 2.5
import "../../../base"

/*!
    \qmltype ImageViewer
    
    ImageViewer displays image content and pan and zoom 
 */ 
OmekaViewer {
    id: root
    width: parent.width
    height: img.height
    sourceWidth: img.sourceSize.width

    //image component
    Image{
        id: img
        width: parent.width
        fillMode: Image.PreserveAspectFit
        asynchronous: true
        source: root.source
    }
}
